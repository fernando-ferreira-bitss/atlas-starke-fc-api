[Unit]
Description=Starke Cash Flow Report Daily Timer
Requires=starke.service

[Timer]
# Run every day at 08:00 AM (America/Sao_Paulo timezone)
OnCalendar=*-*-* 08:00:00
# If system was down, run immediately on next startup
Persistent=true
# Randomize startup by up to 5 minutes to avoid peak loads
RandomizedDelaySec=300

[Install]
WantedBy=timers.target
